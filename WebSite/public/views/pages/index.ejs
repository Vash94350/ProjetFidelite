<!DOCTYPE html>
<html>
    <head>
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--Import materialize.css-->
        <link type="text/css" rel="stylesheet" href="stylesheets/materialize.min.css"  media="screen,projection"/>
        <link type="text/css" rel="stylesheet" href="stylesheets/connection-page-spec.css"/>

        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>

    <body class="cyan lighten-4">
        <div class="row">
            <div class="col s12 m4 offset-m4">
                <div class="card">
                    <div class="card-action cyan white-text">
                        <h3 class="center-align">Fidelity project</h3>
                    </div>
                    <div class="card-content">
                        <div class="row">
                            <ul class="tabs">
                                <li class="tab col s4 offset-s2"><a class="active" href="#">particulier</a></li>
                                <li class="tab col s4"><a href="#">entreprise</a></li>
                            </ul>
                        </div>
                        <br>
                        <div class="row">
                            <div class="input-field">
                                <i class="material-icons prefix">email</i>
                                <input id="email" type="email" class="validate">
                                <label for="email">Email</label>
                            </div>
                            <div class="input-field">
                                <i class="material-icons prefix">vpn_key</i>
                                <input id="password" type="password" class="validate">
                                <label for="password">Password</label>
                            </div>
                            <div class="form-field">
                                <input type="checkbox" id="remember" class="blue" />
                                <label for="remember">remember me ?</label>
                            </div><br><br>
                            <div class="form-field"><a class="waves-effect waves-light btn cyan col s3 offset-s2">log in</a></div>
                            <div class="form-field"><a class="waves-effect waves-light btn cyan col s3 offset-s2 ">sign in</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Import jQuery before materialize.js-->
        <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        <script type="text/javascript" src="javascripts/materialize.min.js"></script>
    </body>
</html>